<Window x:Class="ValveGetter.UI.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Output" 
        MinHeight="400" MinWidth="600"
        Background="#F5F5F5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Text Output -->
        <Border Grid.Row="0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Background="White"
                CornerRadius="4"
                Margin="0,0,0,10">
            <TextBox x:Name="OutputTextBox"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="10"
                     BorderThickness="0"
                     Background="White"/>
        </Border>

        <!-- Button Panel -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="SelectAllButton"
                    Content="Select All"
                    Click="SelectAllButton_Click"
                    Width="100"
                    Height="32"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>

            <Button x:Name="CopyButton"
                    Content="Copy All"
                    Click="CopyButton_Click"
                    Width="100"
                    Height="32"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>

            <Button x:Name="CloseButton"
                    Content="Close"
                    Click="CloseButton_Click"
                    Width="100"
                    Height="32"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
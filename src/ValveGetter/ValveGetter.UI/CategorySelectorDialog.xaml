<Window x:Class="ValveGetter.UI.CategorySelectorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Category"
        Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Category Selection -->
        <GroupBox Grid.Row="0" Header="Select Category">
            <ListBox x:Name="lstCategories"
                     SelectionChanged="LstCategories_SelectionChanged"
                     DisplayMemberPath="CategoryName">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSeparator}" Value="True">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsCommon}" Value="True">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </GroupBox>

        <!-- MEP Warning (shown only for MEP mode) -->
        <TextBlock Grid.Row="1" x:Name="txtMEPWarning"
                   TextWrapping="Wrap"
                   Foreground="#FFAD5F00"
                   Margin="10,5,5,0"
                   Visibility="Collapsed">
            <Run Text="⚠️ Performance Tip: " FontWeight="Bold"/>
            <Run Text="Only add MEP categories you need. If all valves are on pipework, only add 'MEP Fabrication Pipework'. More categories = slower extraction."/>
        </TextBlock>

        <!-- Name Condition (shown only for valve mode) -->
        <GroupBox Grid.Row="2" x:Name="grpNameFilter" Header="Optional Name Filter">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Name contains:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,5"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="txtNameCondition"
                         Height="25"
                         Margin="0,0,0,5"
                         ToolTip="e.g., 'valve' to match only elements with 'valve' in their name. Leave empty for all elements."/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Apply filter to:"
                           VerticalAlignment="Center"
                           Margin="0,5,10,0"/>
                <StackPanel Grid.Row="1" Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,5,0,0">
                    <RadioButton x:Name="rbFamilyName"
                                 Content="Family Name"
                                 IsChecked="True"
                                 Margin="0,0,15,0"/>
                    <RadioButton x:Name="rbTypeName"
                                 Content="Type Name"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="btnOk"
                    Content="OK"
                    Click="BtnOk_Click"
                    IsDefault="True"
                    IsEnabled="False"
                    FontWeight="Bold"/>
            <Button Content="Cancel"
                    Click="BtnCancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>